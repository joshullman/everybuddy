<nav>
  <% if logged_in? %>
    <button class="btn left"><a href="/users/<%= current_user.id %>">Profile</a></button>
    <button class="btn left"><a href="/">Search</a></button>
    <button class="btn left"><a href="/tags">Tags</a></button>
    <button class="btn left"><a href="/conversations">Convos</a></button>
    <button class="btn left"><a href="/buddies">Buddies</a></button>
    <button class="btn left"><a href="/users/<%= current_user.id %>/events">Events</a></button>
    <button class="btn right"><a href="/logout">Logout</a></button>
  <% else %>
    <button class="btn left"><a href="/login">Login</a></button>
    <button class="btn left"><a href="/users/new">Register</a></button>
    <button class="btn left"><a href="/">Search</a></button>
  <% end %>
</nav>
<br>

<div>
  <h3>Your Conversations:</h3>
  <% @conversations.each do |conversation| %>
    <% if User.find(conversation.sender).id == current_user.id %>
      <p><%= conversation.created_at %></p>
      <p><a href="/users/<%= User.find(conversation.receiver).id %>"><%= User.find(conversation.receiver).username %>:</a></p>
      <p>
        <a href="/conversations/<%= conversation.id %>"><%= conversation.title %></a>
        <form action="/conversations/<%= conversation.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </p>
      <br>
    <% else %>
      <p><%= conversation.created_at %></p>
      <p><a href="/users/<%= User.find(conversation.sender).id %>"><%= User.find(conversation.sender).username %>:</a></p>
      <p>
        <a href="/conversations/<%= conversation.id %>"><%= conversation.title %></a>
        <form action="/conversations/<%= conversation.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </p>
      <br>
    <% end %>
  <% end %>
</div>
