<button class="btn left"><a href="/users/<%= current_user.id %>">Profile</a></button>
<button class="btn right"><a href="/logout">Logout</a></button>
</br>

<div>

  <p><a href="/events/new">New Event</a></p>

  <h3><%= @user.username %>'s Events:</h3>
  
  <% @events.each do |event| %>

    <% if event.is_private == false && @user.id != current_user.id %>
      <p>
        <a href="/users/<%= @user.id %>/events/<%= event.id %>"><%= event.name %></a>
        <br>
        <%= event.time %>
        <br>
        <%= event.location%>
      </p>
    <% end %>

    <% if @user.id == current_user.id %>
      <p>
        <a href="/users/<%= @user.id %>/events/<%= event.id %>"><%= event.name %></a>
        <br>
        <%= event.time %>
        <br>
        <%= event.location%>

        <% if event.is_private == true %>
          <h3>Private Event</h3>
        <% else %>
          <h3>Public Event</h3>
        <% end %>

        <form action="/events/<%= event.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete Event">
        </form>
        
      </p>
    <% end %>

  <% end %>
</div>