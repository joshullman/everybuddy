<div class="center">
  <h1><%= @user.username %></h1>
  <p><h3><%= @user.name %></h3></p>
  <p><h3>Tags:</h3></p>
  <h4>
    <% tags = [] %>
    <% @user.tags.each do |tag| %>
    <% tags << tag.name %>
    <% end %>
    <%= tags.join(", ") %>
  </h4>
</div>

